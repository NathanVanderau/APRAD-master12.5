<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">

    <LinearLayout
        android:id="@+id/firstFreqVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/frequency_1"/>
        <EditText
            android:id="@+id/freq_1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstTimeVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/firstFreqVariable">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/time_1"/>
        <EditText
            android:id="@+id/t_1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstSpace"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/firstTimeVariable">
    </LinearLayout>



    <LinearLayout
        android:id="@+id/secondFreqVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/firstSpace">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/frequency_2"/>
        <EditText
            android:id="@+id/freq_2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondTimeVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/secondFreqVariable">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/time_2"/>
        <EditText
            android:id="@+id/t_2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondSpace"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/secondTimeVariable">
    </LinearLayout>



    <LinearLayout
        android:id="@+id/thirdFreqVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/secondSpace">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/frequency_3"/>
        <EditText
            android:id="@+id/freq_3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdTimeVariable"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/thirdFreqVariable">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/time_3"/>
        <EditText
            android:id="@+id/t_3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ff9c9b9f"
            android:text="@string/hertz"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdSpace"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/thirdTimeVariable">
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/helpButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Go!"
            android:background="@drawable/grey_button"
            style="@style/button_text"/>
    </LinearLayout>

</RelativeLayout>